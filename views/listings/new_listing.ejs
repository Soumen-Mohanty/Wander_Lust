<%- layout("/layouts/boilerplate.ejs") %>
<div class="row justify-content-center">
  <div class="col col-8">
    <h1>Create New Listing</h1>
    <form
      action="http://localhost:3000/listings/new_listing"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mt-3">
        <label for="_title" class="form-label"><b>Title</b></label>
        <input
          type="text"
          name="title"
          placeholder="Enter Title"
          class="form-control"
          id="_title"
          required
        />
        <div class="invalid-feedback">Enter a valid Title</div>
        <div class="valid-feedback">Nice Title</div>
      </div>
      <div class="mt-3">
        <label for="_description" class="form-label"><b>Description</b></label>
        <textarea
          name="description"
          placeholder="Enter Description"
          class="form-control"
          id="_description"
          required
        ></textarea>
        <div class="invalid-feedback">Enter a valid and precise description</div>
      </div>
      <div class="mt-3">
        <label for="_image" class="form-label"><b>Image</b></label>
        <input
          type="text"
          name="img"
          placeholder="Enter URL"
          class="form-control"
          id="_image"
          required
        />
        <div class="invalid-feedback">Enter a valid url</div>
      </div>
      <div class="row row-cols-md-2 row-cols-sm-1 mt-3">
        <div class="col">
          <label for="_price" class="form-label"><b>Price</b></label>
          <input
            type="number"
            name="price"
            class="form-control"
            id="_price"
            placeholder="Enter Price"
            required
          />
          <div class="invalid-feedback">Enter a valid price</div>
        </div>
        <div class="col">
          <label for="_location" class="form-label"><b>Location</b></label>
          <input
            type="text"
            name="location"
            class="form-control"
            id="_location"
            placeholder="Enter Location"
            required
          />
          <div class="invalid-feedback">Enter a valid location</div>
        </div>
      </div>
      <div class="mt-3">
        <label for="_country" class="form-label"><b>Country</b></label>
        <input
          type="text"
          name="country"
          class="form-control"
          id="_country"
          placeholder="Enter Country"
          required
        />
        <div class="invalid-feedback">Enter a valid country</div>
      </div>
      <button class="btn mt-3 btn-create">Post</button>
    </form>
  </div>
</div>
