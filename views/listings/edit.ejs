<%- layout("/layouts/boilerplate.ejs") %>
<div class="row justify-content-center">
  <div class="col col-8">
    <h1>EDIT LISTING</h1>
    <form
      action="/listings/edit/<%=data._id%>?_method=PUT"
      method="post"
      class="needs-validation"
      novalidate
    >
      <div class="mt-3">
        <label for="_title" class="form-label"><b>Title</b></label>
        <input
          type="text"
          name="title"
          value="<%=data.title%>"
          id="_title"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a valid Title</div>
      </div>
      <div class="mt-3">
        <label for="_description" class="form-label"><b>Description</b></label>
        <textarea name="description" id="_description" class="form-control" required>
<%=data.description%></textarea
        >
        <div class="invalid-feedback">Enter a valid and precise description</div>
      </div>
      <div class="mt-3">
        <label for="_image" class="form-label"><b>Image</b></label>
        <input
          type="text"
          name="img"
          value="<%=data.image%>"
          id="_image"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a valid url</div>
      </div>
      <div class="row row-cols-md-2 row-cols-sm-1 row-cols-lg-2">
        <div class="col">
          <div class="mt-3">
          <label for="_price" class="form-label"><b>Price</b></label>
          <input
            type="number"
            name="price"
            value="<%=data.price%>"
            id="_price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid price</div>
        </div>
        </div>
        <div class="col">
          <div class="mt-3">
          <label for="_location" class="form-label"><b>Location</b></label>
          <input
            type="text"
            name="location"
            value="<%=data.location%>"
            id="_location"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid location</div>
        </div>
        </div>
      </div>
      <div class="mt-3">
        <label for="country" class="form-label"><b>Country</b></label>
        <input
          type="text"
          name="country"
          value="<%=data.country%>"
          id="_country"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a valid country</div>
      </div>
      <button class="btn mt-3 btn-edit">Edit</button>
    </form>
  </div>
</div>
